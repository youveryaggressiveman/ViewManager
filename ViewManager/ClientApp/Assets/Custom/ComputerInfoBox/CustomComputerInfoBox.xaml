<Window x:Class="ClientApp.Assets.Custom.ComputerInfoBox.CustomComputerInfoBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp.Assets.Custom.ComputerInfoBox"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        xmlns:lang="clr-namespace:ClientApp.Properties.Lang"
         WindowStyle="None"
        Title="" Height="400" Width="500"
        MaxHeight="400" MaxWidth="500" WindowStartupLocation="CenterOwner">
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="AllowsTransparency"
              Value="True" />
            <Setter Property="WindowStyle"
              Value="None" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Window">
                        <Grid>
                            <Border Background="{DynamicResource MainColor}"
                              CornerRadius="12"
                                    BorderThickness="2"
                                    BorderBrush="{DynamicResource ColorHighlight}"
                                    Margin="12"
                                    Padding="5">

                            </Border>
                            <ContentPresenter Margin="12" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Border Background="Transparent"
                MouseLeftButtonDown="DragWindow">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="title"
                           HorizontalAlignment="Left"
                           Margin="10 0 0 0"
                           FontSize="18"
                           Grid.ColumnSpan="2"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold" />
                <Button Height="25"
                        Width="25"
                        Grid.Column="1"
                        x:Name="exitButton"
                        Click="exitButton_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0 10 10 0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd"
                                    Background="Transparent">
                                <Path x:Name="Pt"
                                      Data="M0,0 M0.2,0.2 L 0.8,0.8 M0.2,0.8 L0.8,0.2 M1,1"
                                      Stretch="Uniform"
                                      Stroke="{DynamicResource AdditionalColor}"
                                      StrokeThickness="2" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="Bd"
                                            Property="Background"
                                            Value="{StaticResource Red}" />
                                    <Setter TargetName="Pt"
                                            Property="Stroke"
                                            Value="{DynamicResource MainColor}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Border CornerRadius="5"
                        MaxWidth="350"
                    Grid.Column="0"
                            HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                               Margin="20 0 0 0"
                            Padding="5"
                    
                    BorderBrush="{DynamicResource AdditionalColor}"
                    BorderThickness="1">
                    <ScrollViewer
                              
                              VerticalScrollBarVisibility="Disabled"
                              HorizontalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock HorizontalAlignment="Left"
                       Grid.Column="1"
                       Foreground="{DynamicResource AdditionalColor}"
                       VerticalAlignment="Center"
                       FontSize="18">
                        <Run Text="{x:Static lang:Lang.PcName}" FontWeight="SemiBold"/>
                        <Run Name="pcNameRun"/>
                            </TextBlock>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Column="0"
                      Margin="10"
                          x:Name="scrollPcInfo"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">

                <TextBlock x:Name="descriptionTextBlock"
                   FontSize="15"
                   />
            </ScrollViewer>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="{x:Static lang:Lang.TitleCPU}"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           FontSize="18"/>
                <lvc:CartesianChart Grid.Column="1"
                                Margin="10 5 10 10"
                                    Grid.Row="1"
                                x:Name="chart"/>
            </Grid>
        </Grid>

        <Button Grid.Row="2"
                Content="OK"
                FontSize="18"
                IsDefault="True"
                x:Name="pcInfoButton"
                Click="pcInfoButton_Click"
                Margin="10"
                Width="100"
                HorizontalAlignment="Right"/>
    </Grid>
</Window>
